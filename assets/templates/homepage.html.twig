<h1>Projects</h1>
<form>
    <table class="table table-light">
        <tr>
            <th>Subject</th>
            <td>
                <input type="text" name="subject" value="{{ subject }}">
            </td>
        </tr>
        <tr>
            <th>Updated on</th>
            <td>
                <input type="date" name="updated-on" value="{{ updatedOn }}">
            </td>
        </tr>
    </table>

    <button type="submit" class="btn btn-warning">Search</button>
</form>

<div>
    {% if isLoading %}
        <div class="text-success">Loading...</div>
    {% else %}
        <div>
            <b>
                Total {{ projects|length }} projects.
            </b>
        </div>
        {% for project in projects %}
            <div>
                <h3>
                    <a href="/project/{{ project.id }}/">
                        {{ project.subject }}
                    </a>
                </h3>

                <div class="text-info">
                    {{ project.updatedOn|date('Y-m-d H:i') }}
                </div>
                <p>
                    {{ project.summery }}
                </p>
            </div>
        {% else %}
            <div class="text-warning">There is no projects yet.</div>
        {% endfor %}
    {% endif %}
</div>